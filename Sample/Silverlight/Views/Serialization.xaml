<controls:ChildWindow x:Class="Silverlight.Views.Serialization"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           xmlns:prism="clr-namespace:Microsoft.Practices.Prism.Interactivity"
           xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
           xmlns:vm="clr-namespace:Silverlight.ViewModels"
           Width="auto" Height="auto" 
           Title="Serialization">
    <controls:ChildWindow.DataContext>
        <vm:SerializationViewModel />
    </controls:ChildWindow.DataContext>

    <StackPanel>
        <CheckBox Content="CheckBox1" IsChecked="{Binding IsChecked.Value, Mode=TwoWay}"/>
        <ComboBox SelectedIndex="{Binding SelectedIndex.Value, Mode=TwoWay}" ItemsSource="{Binding Items}" />
        <TextBox Text="{Binding Text.Value, Mode=TwoWay}" />
        <Slider Value="{Binding SliderPosition.Value, Mode=TwoWay}" />
        
        <StackPanel Orientation="Horizontal">
            <Button Command="{Binding Serialize}">Serialize</Button>
            <Button Command="{Binding Deserialize}">Deserialize</Button>
        </StackPanel>
    </StackPanel>
</controls:ChildWindow>