<controls:ChildWindow x:Class="Silverlight.Views.EventToReactive"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           xmlns:prism="clr-namespace:Microsoft.Practices.Prism.Interactivity"
           xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
           xmlns:r="clr-namespace:Codeplex.Reactive.Interactivity;assembly=ReactiveProperty.SL4"
           xmlns:vm="clr-namespace:Silverlight.ViewModels"
           Width="300" Height="300" 
           Title="EventToReactive">
    <controls:ChildWindow.DataContext>
        <vm:EventToReactiveViewModel />
    </controls:ChildWindow.DataContext>

    <Grid>
        <!-- Use Blend SDK's Interaction Trigger -->
        <!-- Event binding to ReactiveProperty -->
        <i:Interaction.Triggers>
            <i:EventTrigger EventName="MouseMove">
                <r:EventToReactive ReactiveProperty="{Binding MouseMove}" />
            </i:EventTrigger>
            <i:EventTrigger EventName="MouseLeftButtonDown">
                <r:EventToReactive ReactiveProperty="{Binding MouseDown}" />
            </i:EventTrigger>
        </i:Interaction.Triggers>
        <TextBlock Text="{Binding CurrentPoint.Value}" />
    </Grid>
</controls:ChildWindow>