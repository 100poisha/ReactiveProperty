<UserControl x:Class="Silverlight.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">

    <Grid x:Name="LayoutRoot" Background="White">
        <Button Command="{Binding Command1, Mode=TwoWay}" Content="Button" Height="23" HorizontalAlignment="Left" Margin="89,199,0,0" Name="button1" VerticalAlignment="Top" Width="75" />
        <TextBox Text="{Binding OnException.Value, Mode=TwoWay, ValidatesOnExceptions=True}" Height="24" HorizontalAlignment="Left" Margin="47,52,0,0" Name="textBox1" VerticalAlignment="Top" Width="120" />
        <TextBox Text="{Binding OnDataError.Value, Mode=TwoWay, ValidatesOnDataErrors=True}" Height="24" HorizontalAlignment="Left" Margin="47,109,0,0" Name="textBox2" VerticalAlignment="Top" Width="120" />
        <TextBox Text="{Binding OnNotifyError.Value, Mode=TwoWay, ValidatesOnNotifyDataErrors=True}" Height="24" HorizontalAlignment="Left" Margin="65,156,0,0" Name="textBox3" VerticalAlignment="Top" Width="120" />
    </Grid>
</UserControl>
